{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es5",
      "es2015",
      "dom"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "@imario42/*": [
        "dist/@imario42/*"
      ],
      "@imario42/color-picker": [
        "dist/@imario42/color-picker"
      ],
      "@imario42/color-picker/*": [
        "dist/@imario42/color-picker/*"
      ],
      "@imario42/datetime-picker": [
        "dist/@imario42/datetime-picker"
      ],
      "@imario42/datetime-picker/*": [
        "dist/@imario42/datetime-picker/*"
      ],
      "file-input": [
        "dist/@imario42/file-input"
      ],
      "file-input/*": [
        "dist/@imario42/file-input/*"
      ]
    },
    "useDefineForClassFields": false,
    "skipLibCheck": true
  }
}
